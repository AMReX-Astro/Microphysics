&PROBIN

  run_prefix = "reaclib_cburn_"

  small_temp = 1d5
  small_dens = 1d5

  burner_verbose = .false.

  ! Set which jacobian to use
  ! 1 = analytic jacobian
  ! 2 = numerical jacobian
  jacobian   = 1

  renormalize_abundances = .true.

  rtol_spec = 1.0d-12
  rtol_enuc = 1.0d-9
  rtol_temp = 1.0d-9
  atol_spec = 1.0d-12
  atol_enuc = 1.0d-9
  atol_temp = 1.0d-9

  small_x = 1.d-16
  
/

&cellparams

  tmax     = 1.0d3
  numsteps = 1000

  density       = 3.d9
  temperature   = 5.d8

  massfractions(1)  = 0.0d0
  massfractions(2)  = 0.0d0
  massfractions(3)  = 0.0d0
  massfractions(4)  = 0.5d0
  massfractions(5)  = 0.5d0
  massfractions(6)  = 0.0d0
  massfractions(7)  = 0.0d0
  massfractions(8)  = 0.0d0

/
